@model IEnumerable<CourseWorkDB.DAL.Entities.User>

@{
    ViewBag.Title = "Список пользователей";
}

<h2>Список пользователей</h2>

<p>
    <a href="@Url.Action("Create")">
        <span class="glyphicon glyphicon-plus"></span>
        Добавить нового пользователя
    </a>
</p>
<table class="table table-striped table-responsive table-hover table-bordered" style="text-align: center">
    <tr>
        <th style="text-align: center">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th style="text-align: center">
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th style="text-align: center">
            @Html.DisplayNameFor(model => model.Patronymic)
        </th>
        <th style="text-align: center">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th style="text-align: center">
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th style="text-align: center">
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th style="width: 100px;text-align: center">
            @Html.DisplayNameFor(model => model.DiscountInPercent)
        </th>
        <th style="text-align: center">
            @Html.DisplayNameFor(model => model.TotalSpentMoney)
        </th>
        <th style="width: 160px;text-align: center">
            Возможности
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Patronymic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiscountInPercent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalSpentMoney)
        </td>
        <td>
            <p>
                <a href="@Url.Action("Edit", new {id = item.Id})">
                    <span class="glyphicon glyphicon-edit"></span>
                    Редактировать
                </a>
            </p>
            <p>
                <a href="@Url.Action("Details", new {id = item.Id})">
                    <span class="glyphicon glyphicon-list-alt"></span>
                    Подробнее
                </a>
            </p>
            <p>
                <a href="@Url.Action("Delete", new {id = item.Id})">
                    <span class="glyphicon glyphicon-trash"></span>
                    Удалить
                </a>
            </p>
        </td>
    </tr>
}

</table>
