                @Html.EditorFor(model => model.TotalSpentMoney, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TotalSpentMoney, "", new { @class = "text-danger" })
            </div>
        </div>

