@model IEnumerable<CourseWorkDB.DAL.Entities.User>
@{
    ViewBag.Title = "Пользователи";
}

<h2>Пользователи</h2>

<table class="table table-striped table-responsive table-hover table-bordered" style="text-align: center">
    <tr>
        <th style="text-align: center">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th style="text-align: center">
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th style="text-align: center">
            @Html.DisplayNameFor(model => model.Patronymic)
        </th>
        <th style="text-align: center">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th style="text-align: center">
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th style="width: 100px;text-align: center">
            @Html.DisplayNameFor(model => model.DiscountInPercent)
        </th>
        <th style="text-align: center">
            @Html.DisplayNameFor(model => model.TotalSpentMoney)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patronymic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountInPercent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalSpentMoney)
            </td>
            
        </tr>
    }

</table>