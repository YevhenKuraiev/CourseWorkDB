@model IEnumerable<CourseWorkDB.DAL.Entities.Order>

@{
    ViewBag.Title = "Список заказов";
}

<h2>Список заказов</h2>

<p>
    <a href="@Url.Action("Create")">
        <span class="glyphicon glyphicon-plus"></span>
        Добавить новый заказ
    </a>
</p>
<table class="table table-striped table-responsive table-hover table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Summ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfSpentBonuses)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th>
            Пользователь
        </th>
        <th>
            Возможности
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @{ var date = item.DateTime.ToString("MM/dd/yyyy"); }
            @Html.DisplayFor(modelItem => date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Summ)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfSpentBonuses)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Surname)
        </td>
        <td>
            <a href="@Url.Action("Edit", new {id = item.Id})">
                <span class="glyphicon glyphicon-edit"></span>
                Редактировать
            </a>
            |
            <a href="@Url.Action("Details", new {id = item.Id})">
                <span class="glyphicon glyphicon-list-alt"></span>
                Подробнее
            </a>
            |
            <a href="@Url.Action("Delete", new {id = item.Id})">
                <span class="glyphicon glyphicon-trash"></span>
                Удалить
            </a>
        </td>
    </tr>
}

</table>
